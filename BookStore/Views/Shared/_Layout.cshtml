    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] Seabull Gook </title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <body>

        <header>
            <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-black bg-opacity-75 border-bottom shadow-lg mb-3">
                <div class="container">
                    <a class="navbar-brand sticky-top" asp-area="" asp-controller="Home" asp-action="Index">Seabull Gook</a>


                    <ul class="navbar-nav flex-grow-1">
                    </ul>

                    <ul class="nav-item justify-content-end">


                        <a class="nav-link text-dark text-right"> <vc:basket-summary></vc:basket-summary></a>

                    </ul>

                </div>

            </nav>
        </header>

        <div class="row m-1 p-1">

            <div id="categories" class="col-3">
                <vc:categories></vc:categories>
            </div>


            <div class="col-9">
                @RenderBody()
            </div>

        </div>
        <br />
        <footer class="footer shadow-lg bg-black bg-opacity-10 text-muted">
            <div class="container">
                &copy; Benjamin Kloepfer 2022 <a asp-area="" asp-controller="Home"></a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @RenderSection("Scripts", required: false)
    </body>
</html>
